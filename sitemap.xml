---
layout: null
sitemap: 'exclude'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for post in site.posts %}
    <url>
        <loc>{{ post.url | remove:'.html' | prepend: site.baseurl | replace: '//','/' | prepend: site.url }}</loc>
        {% if post.lastmod == null %}
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
        {% else %}
        <lastmod>{{ post.lastmod | date_to_xmlschema }}</lastmod>
        {% endif %}
        <changefreq>daily</changefreq>
        <priority>0.9</priority>
    </url>
    {% endfor %}
    {% for page in site.pages %}
    {% unless page.sitemap == "exclude" or page.url contains ".css" %}
    <url>
        <loc>
            {{ page.url | remove:'.html' | prepend: site.baseurl | replace: '//','/' | prepend: site.url }}
        </loc>
        {% if page.date %}
        <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
        {% else if page.path | file_date | date_to_xmlschema == '1970-01-01T01:00:00+01:00' %}
        <lastmod>2018-05-25T00:00:00+01:00</lastmod>
        {% else %}
        <lastmod>{{ page.path | file_date | date_to_xmlschema }}</lastmod>
        {% endif %}
        {% if page.url == site.baseurl or page.type == 'showcase' or page.type == 'specialty'  %}
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
        {% else %}
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
        {% endif %}
    </url>
    {% endunless %}
    {% endfor %}
</urlset>
